<div class="container">


<h1>个人信息</h1>

<div class="row">
  <div class = "span6 offset3">
    <%= form_for @profile,  html: {:multipart => true} do |f| %>
        <%= f.label :nickname %>
        <%= f.text_field :nickname %>

        <%= f.label :age %>
        <%= f.text_field :age %>

        <%= f.label :gender %>
        <%= f.text_field :gender %>

        <%= f.label :birthday %>
        <%= f.text_field :birthday %>

        <%= f.submit "保存",class: "btn btn-large btn-primary" %>

    <% end %>
</div>
</div>
</div>