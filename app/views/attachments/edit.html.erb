<style type="text/css">
  
</style>
<div class="container">
  <div class="container">
    <div class="col-md-2"></div>
    <div class="row">
      <div class="col-md-8">
        <h3>修改文件信息</h3>
        <div class = "span6 offset3">
          <%= form_for @attachment,  html: {:multipart => true} do |f| %>
          <div>
          <%= image_tag(f.object.link_url, size: "500x400")%>
          </div>
          <%= "上图为原文件，原文件的大小为: #{f.object.attachment_size/1024} KB" %>
          <br />
           <br />

        <label class="col-sm-2 control-label">文件名称</label>
        <%= f.text_field :title, class: "form-control", placeholder: "文件名称" %><br/>
        
        
        <label class="col-sm-2 control-label">文件简介</label>
        <%=  f.text_area :attachment_content, class: "form-control", placeholder: "文件简介，最多500字", size: "10x5"  %><br/>


        <p>
          <label class="col-sm-2 control-label">文件类别</label>
          <%= f.radio_button  :attachment_category, '风景' %>
          <%= label :attachment_category, '风景' %>
          <%= f.radio_button :attachment_category, '人物' %>
          <%= label :attachment_category, '人物' %>
          <%= f.radio_button :attachment_category, '卡通' %>
          <%= label :attachment_category, '卡通' %>
          <%= f.radio_button :attachment_category, '设计' %>
          <%= label :attachment_category, '设计' %>
          <%= f.radio_button :attachment_category, '摄影' %>
          <%= label :attachment_category, '摄影' %>
        </p>

        <p>

          <label class="col-sm-2 control-label">标签</label>

          <%= f.text_field :tags, class: "form-control", placeholder: "文件的标签,用逗号分开"%>
        </p>
        <p>
          <%= f.file_field :link, class: "btn btn-default btn-block", text:"上传文件"  %>
        </p>
        <br/>
        <p>
          <%= f.submit "更新文件", class: "btn btn-primary  btn-large btn-block", size: "300x34" %>
        </p>
        <% end %>


        </div>
      </div>
    </div>
  </div>
</div>