<h1>修改信息</h1>
<%#= render 'form' %>

<div class="container">
  <h1>上传文件</h1>

  <div class="row">
    <div class = "span6 offset3">
      <%= form_for @attachment,  html: {:multipart => true} do |f| %>
          <%= image_tag(f.object.link_url) %>
          <%= f.label :title %>
          <%= f.text_field :title %>

          <%= f.label :attachment_category %>
          <%= f.text_field :attachment_category %>

          <%= f.file_field :link      %>
          <%= f.submit "上传文件",class: "btn btn-large btn-primary" %>

      <% end %>


    </div>
  </div>
</div>