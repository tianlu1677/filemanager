


<div class="container">
  <div class="col-md-2"></div>
    <div class="col-md-8">
<h2>注册用户</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "邮件名称" %></div><br/>

  
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "密码，不小于6位"  %><br/>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "重复密码" %></div><br/>

  <div><%= f.submit "注册", class: "btn btn-default" %>已经有账号了？<%= render "devise/shared/links" %></div>
<% end %>

  </div>
</div>

