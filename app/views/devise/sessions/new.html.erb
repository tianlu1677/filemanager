<style type="text/css">
	h3 { 
		text-align: center
	  }
</style>

<div class="container ">
  <div class="col-md-2"></div>
  <div class="col-md-8">

<h3>登陆</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label "邮件名称",class: "label label-info" %>
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "邮件名称" %></div>
		<br/>
  <div>
  <%= f.label "密码", class: "label label-info" %>
  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "密码" %></div>
<br/>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label "记住我?" %></div>
  <% end -%>

  <div><%= f.submit "登陆", class: "btn btn-success btn-lg" %><%= render "devise/shared/links" %></div>
<% end %>


</div>
</div>
<div class="col-md-2"></div>
